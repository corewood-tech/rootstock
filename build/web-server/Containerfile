FROM golang:1.24-alpine AS builder

WORKDIR /src

COPY web-server/go.mod web-server/go.sum ./
RUN go mod download

COPY web-server/ .
RUN CGO_ENABLED=0 go build -o /bin/web-server ./cmd/server

FROM alpine:3.21

RUN apk add --no-cache ca-certificates

COPY --from=builder /bin/web-server /bin/web-server

ENTRYPOINT ["/bin/web-server"]
